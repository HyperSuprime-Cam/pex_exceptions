# -*- python -*-
Import("env")

env.Program(["BuildExcept.cc"], LIBS=env.libs["boost"] + ["pex_exceptions"])

env.CheckSwig("python", ilang="c++")
env.Append(SWIGFLAGS=" -Ipython")
exceptionTests = env.LoadableModuleIncomplete("_exceptionTests", "exceptionTests.i", LIBS=["pex_exceptions"])

#
# Tests
#
import lsst.tests
import os
env['ENV']['SEAL_PLUGINS'] = os.environ['SEAL_PLUGINS']

tests = lsst.tests.Control(env, ignoreList=['exceptionTests.py'], verbose=True)

tests.run("BuildExcept.cc")

for target in tests.run("*.py"):
    env.Depends(target, exceptionTests)
