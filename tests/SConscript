# -*- python -*-
Import("env")

env.Program("Exception_1.cc", LIBS=env.getLibs("main test"))
failerLib = env.LoadableModuleIncomplete("_failer", ["Failer.i", "Failer.cc"],
                                         LIBS=env.getLibs("main python"))

#
# Tests
#
import lsst.sconsUtils.tests
import os

tests = lsst.sconsUtils.tests.Control(env, verbose=True)

tests.run("Exception_1.cc")
for target in tests.run("Exception_*.py"):
    env.Depends(target, failerLib)
    env.Depends(target, "../python/lsst/pex/exceptions/_exceptionsLib.so")
