# -*- python -*-
Import("env")

env.Program("Exception_1.cc", LIBS=env.getlibs("pex_exceptions"))
failerLib = env.LoadableModuleIncomplete("failer", Split("failerLib.cc Failer.cc"),
                                         LIBS=env.getlibs("pex_exceptions") 
                                         + env.getlibs("python boost_python"))

#
# Tests
#
import lsst.tests
import os

tests = lsst.tests.Control(env, verbose=True)

tests.run("Exception_1.cc")
for target in tests.run("Exception_*.py"):
    env.Depends(target, failerLib)
    env.Depends(target, "../python/lsst/pex/exceptions/exceptionsLib.so")
